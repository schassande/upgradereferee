{
    "database": {
        "rules": "database.rules.json"
    },
    "hosting": [
        {
            "public": "hosting/app",
            "target": "upgrade",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ],
            "headers": [{
                    "source": "/build/app/**",
                    "headers": [{
                        "key": "Cache-Control",
                        "value": "public, max-age=31536000"
                    }]
                },
                {
                    "source": "ngsw-worker.js",
                    "headers": [{
                        "key": "Cache-Control",
                        "value": "no-cache"
                    }]
                }
            ]
        }
    ]
}